{
  "name": "logora",
  "version": "2.0.3",
  "description": "A lightweight and extensible TypeScript logging core focused on structured logs and modular outputs.",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./module": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "module": [
        "dist/module.d.ts"
      ]
    }
  },
  "scripts": {
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsup && rollup -c rollup.config.mjs",
    "build:dev": "tsup --watch",
    "build:prod": "npm run clean && npm run lint && npm run build",
    "clean": "rimraf dist",
    "check": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build:prod"
  },
  "keywords": [
    "logger",
    "typescript",
    "logging"
  ],
  "author": "SÃ©bastien Bosmans <https://github.com/boseba>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boseba/logora.git"
  },
  "bugs": {
    "url": "https://github.com/boseba/logora/issues"
  },
  "homepage": "https://github.com/boseba/logora#readme",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@vitest/coverage-v8": "^3.1.2",
    "coveralls": "^3.1.1",
    "eslint": "^9.25.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.0",
    "rollup-plugin-dts": "^6.2.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.2"
  }
}
