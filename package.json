{
  "name": "@boseba/logora",
  "version": "1.1.1",
  "description": "A TypeScript logging utility with colors and formatting.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsup",
    "build:dev": "tsup --watch",
    "build:prod": "npm run clean && npm run lint && npm run build",
    "clean": "rm -rf dist",
    "check": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build:prod"
  },
  "keywords": [
    "logger",
    "typescript",
    "logging",
    "console"
  ],
  "author": "SÃ©bastien Bosmans <https://github.com/boseba>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "moment": "^2.30.1"
  }
}
